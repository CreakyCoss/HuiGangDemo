<?xml version="1.0" encoding="utf-8"?>
<ScrollView  android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9db830"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25sp"
            android:src="@mipmap/return_128"
            android:layout_marginLeft="1dp"
            android:layout_gravity="left|center_vertical"
            />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="个人设置"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:text="编辑"
            android:textSize="18sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginRight="1dp"
            />
    </LinearLayout>


    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="头像" />
            <ImageView style="@style/user_arrow"/>
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <!-- 分割线-->
        <View style="@style/bg_line"/>


        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="用户名" />
            <TextView style="@style/textview" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout style="@style/wrap_layout"

        >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="实名认证" />
            <TextView style="@style/textview" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <!-- 分割线-->
        <View style="@style/bg_line"/>

        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="性别" />
            <TextView style="@style/textview" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <View style="@style/bg_line"/>



        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="年龄段" />
            <TextView style="@style/textview" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>




    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="学历" />
            <TextView style="@style/textview" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <!-- 分割线-->
        <View style="@style/bg_line"/>

        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="@string/special" />
            <TextView style="@style/textview" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <View style="@style/bg_line"/>

        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="业余爱好" />
            <TextView style="@style/textview" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="修改密码" />
            // <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <!-- 分割线-->
        <View style="@style/bg_line"/>

        <View style="@style/bg_line"/>



        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="退出当前用户" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>
